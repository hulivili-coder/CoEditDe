<Window x:Class="CoEditDe.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoEditDe"
        mc:Ignorable="d"
        Title="Settings" Height="400" Width="500" WindowStartupLocation="CenterOwner">
    <TabControl>
        <TabItem Header="Basic">
            <StackPanel Margin="10">
                <TextBlock Text="Theme:" />
                <ComboBox x:Name="ThemeComboBox" SelectionChanged="ThemeComboBox_SelectionChanged">
                    <ComboBoxItem Content="Dark" IsSelected="True" />
                    <ComboBoxItem Content="Light" />
                </ComboBox>
                <TextBlock Text="Font Size:" Margin="0,10,0,0" />
                <ComboBox x:Name="FontSizeComboBox" SelectionChanged="FontSizeComboBox_SelectionChanged">
                    <ComboBoxItem Content="12" />
                    <ComboBoxItem Content="14" IsSelected="True" />
                    <ComboBoxItem Content="16" />
                    <ComboBoxItem Content="18" />
                    <ComboBoxItem Content="20" />
                </ComboBox>
            </StackPanel>
        </TabItem>
        <TabItem Header="Developer Console">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBox x:Name="ConsoleOutputTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" />
                <TextBox x:Name="ConsoleInputTextBox" Grid.Row="1" Margin="0,5,0,0" KeyDown="ConsoleInputTextBox_KeyDown" />
                <Button x:Name="ExecuteButton" Content="Execute" Grid.Row="2" Margin="0,5,0,0" Click="ExecuteButton_Click" />
            </Grid>
        </TabItem>
    </TabControl>
</Window>